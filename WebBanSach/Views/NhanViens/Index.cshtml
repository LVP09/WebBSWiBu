@model IEnumerable<WebBanSach.Models.NhanVien>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách nhân viên</h1>

<p>
    <a asp-action="Create">Thêm Nhân viên</a>
</p>
<form asp-controller="NhanViens" asp-action="Index" method="post">
    <p>
        Tìm kiếm: <input  type="text" name="SearchString" />
        <input type="submit" value="TÌM KIẾM" />
    </p>
    <p>
        Ngày bắt đầu : <input  type="datetime" name="star" />
        Ngày kết thúc :<input  type="datetime" name="end" />
        <input type="submit" value="TÌM" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
               
                <h4>Họ và tên</h4>
            </th>
            <th>
                
                 <h4>Email</h4>
            </th>
            <th>
             
                 <h4>Số điện thoại</h4>
            </th>
            <th>
               
                 <h4>Địa chỉ</h4>
            </th>
            <th>
               
                 <h4>Hình ảnh</h4>
            </th>
            <th>
               
                 <h4>Ngày sinh</h4>
            </th>
           
         
            <th>
                
                 <h4>Trạng thái</h4>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoVaTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                 <img src="~/images/Nhanviens/@item.HinhAnh" width="100" height="50" class="card-img-top" alt="@item.HoVaTen">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
           
            
            <td>
                @if (@item.TrangThai == 1)
                {
                    <h6>Hoạt Động</h6>
                    
                }
                else{
                
                    <h6>Không Hoạt Động</h6>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID_NhanVien">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.ID_NhanVien">Chi tiết </a> |
                <a asp-action="Delete" asp-route-id="@item.ID_NhanVien">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
